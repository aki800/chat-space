%html
  %head
    %link{:rel =>"stylesheet", :href =>"https://use.fontawesome.com/releases/v5.1.0/css/all.css", :integrity =>"sha384-lKuwvrZot6UHsBSfcMvOkWwlCMgc0TaWr+30HWe3a4ltaBwTZhyTEggF5tJv8tbt", :crossorigin =>"anonymous"}

  %body
    %header.header
      %p
        グループが作成されました

    .contents
      = render "shared/side_bar"


      .chat
        .chat__group
          .group__left
            %h1.left__name
              グループA
            %h2.left__member
              Member: kaho, neko
          =link_to "Edit", edit_group_path(1), class: "button"
        .chat__user
          = render partial: "message"

          %form{ :action => "/messages", :method => "post" }
            %textarea{ :type => "text", :name => "message", :placeholder => "type a message", :rows => "1"}
            %label{:for =>"file_photo"}
              %i.far.fa-image.fa-2x
              %input{:type =>"file", :id =>"file_photo", :style =>"display:none;"}
            %input{ :type => "submit", :value => "Send", :class => "fas"}
